<Window
    x:Class="SurfacePlayer.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SurfacePlayer"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    Closed="OnWindowClose"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <Image x:Name="imageControl">
            <Image.Source>
                <local:D3DImageSource x:Name="d3dImage" />
            </Image.Source>
        </Image>
        <WrapPanel Grid.Row="1">
            <Button Click="Button_OpenFile" Content="选择文件" />
            <Button Click="Button_PauseResume" Content="播放/暂停" />
            <Button Click="Button_Close" Content="结束" />
            <Slider
                x:Name="progress"
                Width="200"
                Maximum="1000"
                Thumb.DragDelta="progress_DragDelta"
                Minimum="0"
                Thumb.DragCompleted="progress_DragCompleted"
                Thumb.DragStarted="progress_DragStarted"
                Value="1" />
            <Button Click="Convert_Click" Content="转换" />
        </WrapPanel>
    </Grid>
</Window>
